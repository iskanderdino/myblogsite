<% if @user.errors.any? %>
<div class="error-message-container">
  <h3> Failed creating user! </h3>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="article-form-container">
<%= form_for @user do |f| %>
<table class="article-table">
  <tr>
    <td><%= f.label :username, "Name" %></td>
    <td><%= f.text_field :username, id: "username" %></td>
  </tr>
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.text_field :email, id: "email" %></td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password, id: "password" %></td>
  </tr>
  </table>
<p>
<%= f.submit(@user.new_record? ? "Sign-up" : "Save") %>
</p>

<% end %>

<p><%= link_to "Back to Articles", articles_path, id: "back" %></p>
</div>
